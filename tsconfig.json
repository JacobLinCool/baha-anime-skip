{
    "exclude": ["lib", "src/_tests", "**/tsup.config.ts"],
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020", "DOM"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./lib",
        "declaration": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
